<!-- xml to display the home screen -->
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:id="@id/app_logo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@layout/app_logo"/>
    <RelativeLayout
        android:background="@drawable/splashscreensuspend"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/app_logo">
        <TextView android:textSize="16.0dip"
                android:textColor="@color/white"
                android:id="@id/home_text"
                android:paddingLeft="10.0dip"
                android:paddingTop="10.0dip"
                android:paddingRight="10.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_txt"
            android:layout_above="@id/home2_text"
            android:layout_centerHorizontal="true" />
            <TextView android:textSize="14.0dip"
                android:textColor="@color/white"
                android:id="@id/home2_text"
                android:paddingLeft="10.0dip"
                android:paddingTop="10.0dip"
                android:paddingRight="10.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home2_txt"
                android:layout_above="@id/home3_text"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView android:textSize="16.0dip"
                android:textColor="@color/white"
                android:id="@id/home3_text"
                android:paddingLeft="10.0dip"
                android:paddingTop="10.0dip"
                android:paddingRight="10.0dip" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home3_txt"
                android:layout_above="@id/button_about"
                android:layout_centerHorizontal="true" />
            <Button android:id="@id/button_about"
                android:background="@layout/btn_about_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:clickable="true"
                android:layout_marginLeft="10.0dip"
                android:layout_marginBottom="10.0dip"
                android:src="@layout/btn_about_selector"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="30.0dip"
                android:layout_centerHorizontal="true" />
            <Button android:id="@id/settings"
                android:background="@layout/btn_settings_selector"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@layout/btn_settings_selector"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <Button android:id="@id/button_cancel"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@layout/btn_cancel_selector"
                android:background="@layout/btn_cancel_selector"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@id/button_about"
                android:layout_alignStart="@id/button_about" />
      </RelativeLayout>
</RelativeLayout>
<!-- xml to display the home screen -->
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:background="@drawable/splashscreensuspend"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TextView android:textSize="16.0dip"
                android:textColor="@color/white"
                android:id="@id/home_text"
                android:paddingLeft="10.0dip"
                android:paddingTop="10.0dip"
                android:paddingRight="10.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_txt"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@id/home3_text"
            android:layout_alignStart="@id/home3_text" />
            <TextView android:textSize="14.0dip"
                android:textColor="@color/white"
                android:id="@id/home2_text"
                android:paddingLeft="10.0dip"
                android:paddingTop="10.0dip"
                android:paddingRight="10.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home2_txt"
                android:layout_marginTop="31dp"
                android:layout_below="@id/home_text"
                android:layout_alignLeft="@id/home_text"
                android:layout_alignStart="@id/home_text" />
            <TextView android:textSize="16.0dip"
                android:textColor="@color/white"
                android:id="@id/home3_text"
                android:paddingLeft="10.0dip"
                android:paddingTop="10.0dip"
                android:paddingRight="10.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home3_txt"
                android:layout_marginBottom="30dp"
                android:layout_above="@id/button_about"
                android:layout_centerHorizontal="true" />
            <Button android:id="@id/button_about"
                android:background="@drawable/btn_about_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:clickable="true"
                android:src="@drawable/btn_about_selector"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <Button android:id="@id/btn_agree"
                android:background="@drawable/btn_agree_selector"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_agree_selector"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />
            <Button android:id="@id/button_cancel"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_cancel_selector"
                android:background="@drawable/btn_cancel_selector"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@id/home3_text"
                android:layout_alignEnd="@id/home3_text" />
         <CheckBox android:id="@id/settingsok_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:button="@drawable/btn_checkbox_selector"
             android:layout_alignParentTop="true"
             android:layout_alignRight="@id/home_text"
             android:layout_alignEnd="@id/home_text" />
    </RelativeLayout>
</RelativeLayout>

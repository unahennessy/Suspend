<!-- xml to display the suspend off screen -->
<RelativeLayout android:background="@color/black" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- emergency image -->
    <ImageView android:id="@id/image_emergency" android:focusable="true" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:src="@layout/image_emergency_selector"
        android:layout_alignBottom="@id/image_cross"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <!-- settings image -->
    <ImageView android:id="@id/image_setting"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@layout/image_setting_selector"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/image_cross"
        android:layout_toStartOf="@id/image_cross" />
    <!-- onsuspend image -->
    <ImageView
        android:id="@id/image_suspend_off"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dip"
        android:src="@drawable/offsuspend"
        android:layout_centerInParent="true" />
    <!-- clickable off suspend image -->
    <ImageView android:id="@id/image_suspend_off_clickable"
        android:background="@layout/image_off_suspend_selector"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_setting"
        android:layout_marginTop="20.0dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <!-- dialog popup image -->
    <ImageView android:id="@id/image_popup"
        android:background="@drawable/onoffpopupsuspend"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@id/image_suspend_off_clickable"
        android:layout_alignRight="@id/image_navigation"
        android:layout_alignEnd="@id/image_navigation" />
    <!-- cross image in corner -->
    <ImageView android:id="@id/image_cross"
        android:focusable="true" android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@layout/image_cross_selector"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@id/image_navigation"
        android:layout_alignEnd="@id/image_navigation" />
    <!-- text that goes into the popup -->
    <TextView android:textSize="14.0dip" android:textColor="@color/topHeadFontColour" android:id="@+id/text_popup" android:paddingLeft="15.0dip" android:paddingTop="15.0dip" android:paddingRight="15.0dip" android:paddingBottom="15.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="@string/off_popup_message"
        android:layout_alignTop="@id/image_popup"
        android:layout_marginTop="33dp"
        android:layout_alignRight="@id/image_setting"
        android:layout_alignEnd="@id/image_setting"
        android:layout_alignBottom="@id/image_suspend_on"
        android:layout_toRightOf="@id/image_emergency"
        android:layout_toEndOf="@id/image_emergency" />
    <!-- music image -->
    <ImageView android:id="@id/image_music" android:focusable="true" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:src="@layout/image_music_selector"
        android:layout_alignTop="@id/image_navigation"
        android:layout_alignLeft="@id/image_suspend_off_clickable"
        android:layout_alignStart="@id/image_suspend_off_clickable" />
    <!-- navigation image -->
    <ImageView android:id="@id/image_navigation" android:focusable="true" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10.0dip" android:layout_marginBottom="10.0dip" android:src="@layout/image_navigation_selector" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" />
</RelativeLayout>
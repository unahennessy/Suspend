<!-- basically Terms and Conditions for Suspend -->
<!-- two buttons Accept and Cancel plus textviews with  -->
<!-- my rudimentary Terms and Conditions -->
<RelativeLayout android:background="@drawable/backgroundsuspend" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:textSize="20.0dip"
        android:textColor="@color/topHeadFontColour"
        android:gravity="center_horizontal"
        android:id="@id/setup_text"
        android:background="@drawable/headersuspend"
        android:padding="8.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setup_agree"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <ScrollView android:scrollbars="vertical"
        android:fadingEdge="none"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_cancel"
        android:layout_below="@id/setup_text"
        android:id="@+id/scrollView">
        <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_below="@id/setup_text">
            <TextView android:textSize="14.0dip"
                android:textColor="@color/topHeadFontColour"
                android:id="@id/text_help" android:padding="10.0dip"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="@string/agree_setup_info"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="61dp" />
        </RelativeLayout>
    </ScrollView>
    <Button android:id="@id/button_accept"
        android:background="@drawable/btn_accept_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:layout_marginLeft="15.0dip"
        android:layout_marginBottom="10.0dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true" />
    <Button android:id="@id/button_cancel"
        android:background="@drawable/btn_cancel_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:layout_marginRight="15.0dip"
        android:layout_marginBottom="10.0dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
